{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "rules": {
        "prettier/prettier": [
            "error",
            { "endOfLine": "auto" },
            { "usePrettierrc": true }
        ],
        "eqeqeq": ["error", "always"]
    }
}
